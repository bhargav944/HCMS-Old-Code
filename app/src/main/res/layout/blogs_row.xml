<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="12dp"
    android:layout_margin="7dp"
    android:elevation="90dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/doctor_name"
            android:text="Doctor Name"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/hos_name"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/doctor_name"
            android:layout_alignStart="@+id/doctor_name"
            android:layout_below="@+id/doctor_name"
            android:text="Hospital Name"
            android:textSize="16sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/doctor_desi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Designation"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_below="@+id/hos_name"
            android:layout_alignStart="@+id/hos_name" />

        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/doctor_desi"
            android:layout_alignStart="@+id/doctor_desi" />

        <ImageView
            android:layout_width="140dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:id="@+id/doctor_image"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>